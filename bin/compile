#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing CMake 3.11"

# change to the the BUILD_DIR ($1)
cd $1

# download
curl https://cmake.org/files/v3.11/cmake-3.11.0.tar.gz -s -O

# make dir
mkdir -p /tmp/codon/vendor

# untar the binary to the directory we want
tar -C /tmp/codon/vendor -xvf cmake-3.11.0.tar.gz

debug=`ls /tmp/codon/vendor/bin`
echo $debug

echo $PATH

