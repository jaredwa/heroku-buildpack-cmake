#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing CMake 3.11.0"

# change to the the BUILD_DIR ($1)
cd $1

# download the mruby binary (-O) silently (-s)
curl wget https://s3.amazonaws.com/betterment-heroku/cmake.tar.gz -s -O

# make a directory to untar (like unzip) the binary
mkdir -p .vendor/cmake

# untar the binary to the directory we want
tar -C .vendor/ -xvf cmake-3.11.0.tar.gz

mkdir -p .profile.d
echo 'PATH=$PATH:$HOME/.vendor/cmake/bin' > .profile.d/go.sh
